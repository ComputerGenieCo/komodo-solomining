<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[[= model.coin.name ]] Block Explorer</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">[[= model.coin.name ]] Mining</a>
            <div class="navbar-nav ms-auto">
                <div class="nav-item d-flex align-items-center">
                    <div class="form-check form-switch d-flex align-items-center">
                        <input class="form-check-input me-2" type="checkbox" id="themeToggle" onclick="toggleTheme()">
                        <label class="form-check-label" for="themeToggle">
                            <i class="bi bi-moon-stars-fill theme-icon-active"></i>
                            <i class="bi bi-sun-fill theme-icon-inactive"></i>
                        </label>
                    </div>
                </div>
                <a class="nav-link" href="/api">API</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Network Info</h5>
                    </div>
                    <div class="card-body network-info">
                        <div class="network-stats">
                            <div class="stat-item">
                                <span class="stat-label">Current Height:</span>
                                <span class="stat-value">[[= model.blocks ]]</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Network Difficulty:</span>
                                <span class="stat-value">[[= model.difficulty ]]</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Network Hashrate:</span>
                                <span class="stat-value">[[= model.hashrate ]]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Blocks Found</h5>
                    </div>
                    <div class="card-body">
                        <div id="piechart" class="d-flex justify-content-center mb-4"></div>
                        <div id="info" class="table-responsive mb-4"></div>
                        <div id="blocks" class="table-responsive mb-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light theme-footer">
        <div class="container text-center">
            <span class="text-muted">[[= model.coin.name ]] Solo Mining Pool</span>
        </div>
    </footer>

    <!-- Core Dependencies -->
    <script src="/scripts/jquery-3.6.0.min.js"></script>
    <script src="/scripts/bootstrap.bundle.min.js"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    
    <!-- Application Scripts -->
    <script src="/scripts/theme.js"></script>
    <script src="/scripts/main.js" data-args="[[= model.coin.name ]],[[= model.coin.explorer ]]"></script>
</body>
</html>
